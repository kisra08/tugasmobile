<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:background="#ffff">

        <RelativeLayout
            android:id="@+id/user"
            android:layout_width="185dp"
            android:layout_height="155dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/kisra"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:hint="NAMA : KISRAWIDONI "
            android:ems="20"
            android:layout_marginTop="20sp"
            android:id="@+id/ed1"
            android:textAlignment="center"
            android:layout_below="@+id/user"
            android:layout_centerHorizontal="true"
            android:inputType="textCapSentences"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tx5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" UMUR : 22"
            android:ems="15"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_below="@+id/ed1"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:inputType="textCapSentences"/>

        <TextView
            android:id="@+id/tx6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="JENIS KELAMIN : LAKI LAKI"
            android:ems="15"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_below="@+id/tx5"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:inputType="textCapSentences"/>
        <TextView
            android:id="@+id/tx7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" UMUR : 22"
            android:ems="15"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_below="@+id/tx6"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:inputType="textCapSentences"/>
        <TextView
            android:id="@+id/tx8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" ALAMAT : SOLOK"
            android:ems="15"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_below="@+id/tx7"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:inputType="textCapSentences"/>
        <Button
            android:id="@+id/btnbinding"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Menggunakan Binding"
            android:layout_below="@+id/tx8"
            android:textSize="11dp"
            android:layout_marginLeft="100sp"/>
    </RelativeLayout>

</RelativeLayout>